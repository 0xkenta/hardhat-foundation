{
  "name": "hardhat-template",
  "scripts": {
    "build": "hardhat compile",
    "console": "hardhat console",
    "mainnet:deploy": "hardhat --network mainnet deploy",
    "mainnet:verify": "hardhat --network mainnet etherscan-verify --solc-input --license MIT",
    "mainnet:export": "hardhat --network mainnet export",
    "ropsten:deploy": "hardhat --network ropsten deploy",
    "ropsten:verify": "hardhat --network ropsten etherscan-verify --solc-input --license MIT",
    "ropsten:export": "hardhat --network ropsten export",
    "test": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat test",
    "test:coverage": "node --max-old-space-size=4096 ./node_modules/.bin/hardhat coverage",
    "test:gas": "REPORT_GAS=true yarn test",
    "prettier": "prettier --write test/**/*.{js,ts} && prettier --write contracts/**/*.sol",
    "lint": "yarn prettier && solhint -c .solhint.json contracts/**/*.sol"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@tenderly/hardhat-tenderly": "^1.0.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.00",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.0",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.0",
    "hardhat-log-remover": "^2.0.0",
    "hardhat-preprocessor": "^0.1.0",
    "hardhat-spdx-license-identifier": "^2.0.0",
    "hardhat-typechain": "^0.3.0",
    "hardhat-watcher": "^2.0.0",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solidity-coverage": "^0.7.0",
    "ts-generator": "^0.1.0",
    "ts-node": "^9.1.0",
    "typechain": "^4.0.0",
    "typescript": "^4.1.0"
  }
}
